<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../../php4/pear/package.dtd">
<!-- do not use the "Type" attribute here, that one is only for
     generated package.xml files -->
<package version="1.0">
    <name>I18N</name>
    <summary>
Internationalization package
    </summary>

    <description>
This package supports you to localize your applications.
Multiple ways of supporting translation are implemented
and methods to determine the current users (browser-)language.
Localizing Numbers, DateTime and currency is also implemented.
    </description>

    <maintainers>
        <maintainer>
            <user>cain</user>
            <name>Wolfram Kriesing</name>
            <email>wolfram@kriesing.de</email>
            <role>lead</role>
        </maintainer>

        <maintainer>
            <user>richard</user>
            <name>Richard Heyes</name>
            <email>richard@php.net</email>
            <role>developer</role>
        </maintainer>
    </maintainers>

    <release>
        <version>0.8.3</version>
        <license>PHP</license>
        <state>beta</state>
        <date>2002-12-01</date>
        <notes>
            - added DateTime, Number, Currency
            - added a lot of functionality to the DateTime class
            - added polish as first new language
            - enhanced the markup-translate a bit
        </notes>

        <filelist>
            <dir name="/" baseinstalldir="I18N">
                <file role="php" name="Common.php" />
                <file role="php" name="Country.php" />
                <file role="php" name="Language.php" />
                <file role="php" name="Negotiator.php" />
                <file role="php" name="DateTime.php" />
                <file role="php" name="Number.php" />
                <file role="php" name="Format.php" />
                <file role="php" name="Currency.php" />

                <dir name="Messages">
                    <file role="php" name="Common.php" />
                    <file role="php" name="File.php" />
                    <file role="php" name="Translate.php" />
                    <file role="php" name="determineLanguage.inc.php" />
                </dir>

                <dir name="Common">
                    <file role="php" name="de.php" />
                    <file role="php" name="de_AT.php" />
                    <file role="php" name="de_DE.php" />
                    <file role="php" name="en.php" />
                    <file role="php" name="en_US.php" />
                    <file role="php" name="en_UK.php" />
                    <file role="php" name="es.php" />
                    <file role="php" name="es_ES.php" />
                    <file role="php" name="fr.php" />
                    <file role="php" name="fr_FR.php" />
                    <file role="php" name="pl.php" />
                </dir>

                <dir name="docs" role="doc">
                    <file role="doc" name="I18N_Message.php" />
                    <file role="doc" name="I18N_Message_Translate.php" />
                    <file role="doc" name="I18N_Message_Translate.tpl" />
                    <file role="doc" name="I18N_Negotiator.php" />
                    
                    <file role="doc" name="I18N_DateTime.php" />
                    <file role="doc" name="I18N_Number.php" />
                    <file role="doc" name="I18N_Currency.php" />
                </dir>
            </dir>
        </filelist>

    </release>

</package>
